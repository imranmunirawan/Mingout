<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.mingout.activities"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:padding="5dp" >

        <com.mingout.util.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/IV_logo"
            android:layout_width="130dp"
            android:layout_height="140dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerInside"
            android:src="@drawable/image_1"
            app:riv_border_color="#ccc"
            app:riv_border_width="1.5dp"
            app:riv_mutate_background="true"
            app:riv_tile_mode="clamp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/LL_type"
            android:src="@drawable/arrow_black"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:background="@drawable/round_social_shape"
            android:layout_below="@+id/TV_name"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/imageView2"
            android:gravity="center"
            android:id="@+id/LL_type">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/social_icon"/>

            <TextView
                android:id="@+id/TV_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:text="Social"
                android:textColor="#fff"
                android:textSize="14dp"
                android:layout_marginLeft="2dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/TV_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/IV_logo"
            android:layout_below="@+id/textView3"
            android:layout_marginLeft="7dp"
            android:layout_toLeftOf="@+id/imageView2"
            android:layout_toRightOf="@+id/IV_logo"
            android:ellipsize="end"
            android:text="leorm lpsum - All the facts - leorm lpsum"
            android:textColor="#8b8f92"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/TV_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/IV_logo"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@+id/IV_logo"
            android:text="Post Name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#009ed8" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/IV_logo"
            android:text="Description"
            android:textColor="#898a8c"
            android:textSize="14dp" />
    </RelativeLayout>

</RelativeLayout>