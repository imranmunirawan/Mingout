<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/TV_receiverMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_receiver_message_shape"
        android:gravity="left"
        android:minWidth="80dp"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp"
        android:text="a"
        android:textColor="#fbfeff"
        android:textSize="16dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/TV_senderMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/chat_sender_message_shape"
        android:gravity="right"
        android:minWidth="80dp"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp"
        android:text="asdasd"
        android:textColor="#fff"
        android:textSize="16dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/TV_senderMessageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TV_senderMessage"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:text="Sender Time"
        android:textColor="#999"
        android:textSize="11dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/TV_receiverMessageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TV_receiverMessage"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:text="12:28 AM"
        android:textColor="#999"
        android:textSize="11dp"
        android:visibility="visible" />

</RelativeLayout>