<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_matches_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/dashboard_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="5dp"
        android:id="@+id/RL_title"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/TV_cancel"
            android:layout_width="@dimen/header_btn_cancel_size"
            android:layout_height="@dimen/header_btn_cancel_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imageView2"
            android:background="@drawable/back"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/TV_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="MingOut Matches Settings"
            android:textSize="18dp"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/TV_save"
            android:layout_width="@dimen/header_btn_save_size"
            android:layout_height="@dimen/header_btn_save_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/save"
            android:textColor="#fff" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_below="@+id/RL_title"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/RR_sex"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableRight="@drawable/edit_profile_arrow_offwhite"
            android:gravity="left|center"
            android:paddingRight="15dp" >

            <TextView
                android:id="@+id/TV_gender"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:gravity="right"
                android:textSize="16dp"
                android:fontFamily="sans-serif-light"
                android:layout_alignBaseline="@+id/textView1"
                android:layout_alignBottom="@+id/textView1"
                android:layout_alignParentEnd="true"
                android:text="Male"/>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="@string/gender"
                android:textSize="16dp"
                android:textColor="#474747"
                android:layout_alignBottom="@+id/IV_genderSide"
                android:layout_toEndOf="@+id/IV_genderSide" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_proview_gender"
                android:layout_marginLeft="17dp"
                android:id="@+id/IV_genderSide"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="17dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#c0c0c0" />

        <RelativeLayout
            android:id="@+id/RR_age"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableRight="@drawable/edit_profile_arrow_offwhite"
            android:gravity="left|center"
            android:paddingRight="15dp" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_proview_age"
                android:layout_marginLeft="17dp"
                android:id="@+id/IV_ageSide"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="17dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/LL_age"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" >

                <TextView
                    android:id="@+id/TV_fromAge"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:fontFamily="sans-serif-light"
                    android:text="From" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:gravity="right"
                    android:textSize="14dp"
                    android:fontFamily="sans-serif-light"
                    android:text=" | " />

                <TextView
                    android:id="@+id/TV_toAge"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:fontFamily="sans-serif-light"
                    android:text="To" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="@string/age"
                android:textSize="16dp"
                android:layout_toEndOf="@+id/IV_ageSide"
                android:textColor="#474747"
                android:layout_alignBaseline="@+id/LL_age"
                android:layout_alignBottom="@+id/LL_age"/>
        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#c0c0c0" />
    </LinearLayout>

</RelativeLayout>
