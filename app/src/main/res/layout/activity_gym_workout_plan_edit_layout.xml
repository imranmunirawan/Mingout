<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="2" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Gym Workout Plan"
            android:textColor="#fff"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/TV_saveButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/b_add_text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#fff" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="Body Part"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#f95801" />

        <EditText
            android:id="@+id/ET_bodyPart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/round_white_shape"
            android:ems="10"
            android:gravity="center"
            android:hint="Chest e.g"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:textColor="#b4bac8" >
        </EditText>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="Device Number"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#f95801" />

        <EditText
            android:id="@+id/ET_deviceNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/round_white_shape"
            android:ems="10"
            android:gravity="center"
            android:hint="58 e.g"
            android:inputType="number"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:textColor="#b4bac8" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="Sets"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#f95801" />

        <EditText
            android:id="@+id/ET_seat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/round_white_shape"
            android:ems="10"
            android:gravity="center"
            android:hint="12 e.g"
            android:inputType="number"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:textColor="#b4bac8" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="Descriptopn"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#f95801" />

        <EditText
            android:id="@+id/ET_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/round_white_shape"
            android:ems="10"
            android:gravity="center"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:textColor="#b4bac8" />

        <Button
            android:id="@+id/B_delete"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:background="#f95801"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:text="Delete"
            android:textColor="#fff"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>