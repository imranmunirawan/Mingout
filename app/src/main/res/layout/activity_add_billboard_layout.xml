<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:orientation="vertical" >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@color/colorPrimary" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Billboard"
                    android:textColor="#fff"
                    android:textSize="@dimen/header_title_size" />

                <TextView
                    android:id="@+id/TV_save"
                    android:layout_width="@dimen/header_btn_save_size"
                    android:layout_height="@dimen/header_btn_save_size"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/save"
                    android:textColor="#fff"
                    android:textSize="30dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp">

                <com.mingout.util.RoundedImageView
                    android:id="@+id/IV_logo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/billboard_add_image"
                    app:riv_border_color="#333333"
                    app:riv_mutate_background="true"
                    app:riv_oval="true"
                    app:riv_tile_mode="clamp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RR_subject"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/billboard_subject_icon"
                    android:id="@+id/IV_subSide"/>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:text="Subject"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/IV_subSide" />
            </RelativeLayout>

            <EditText
                android:id="@+id/ET_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_white_shape"
                android:ems="10"
                android:hint="Type here.."
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:paddingLeft="5dp"
                android:textColor="#b4bac8"
                android:textSize="14dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp" />

            <RelativeLayout
                android:id="@+id/RR_category"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/billboard_category_icon"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/IV_catSide"/>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:text="Category"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/IV_catSide" />
            </RelativeLayout>

            <EditText
                android:id="@+id/ET_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_white_shape"
                android:ems="10"
                android:paddingLeft="5dp"
                android:hint="Type here.."
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:textColor="#b4bac8"
                android:textSize="14dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp" />


            <RelativeLayout
                android:id="@+id/RR_price"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="left|center"
                android:paddingRight="15dp"
                android:layout_marginLeft="20dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/billboard_price_icon"
                    android:id="@+id/IV_priceSide"/>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:text="Price"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/IV_priceSide" />
            </RelativeLayout>

            <EditText
                android:id="@+id/ET_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_white_shape"
                android:ems="10"
                android:hint="Type here.."
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingLeft="5dp"
                android:maxLines="1"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:textColor="#b4bac8"
                android:textSize="14dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp" />


            <RelativeLayout
                android:id="@+id/RR_detail"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="left|center"
                android:paddingRight="15dp"
                android:layout_marginLeft="20dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/billboard_detail_icon"
                    android:id="@+id/IV_detailSide"/>

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:text="Detail"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/IV_detailSide" />
            </RelativeLayout>

            <EditText
                android:id="@+id/ET_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_white_shape"
                android:ems="10"
                android:hint="Type here.."
                android:paddingLeft="5dp"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:minLines="2"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:textColor="#b4bac8"
                android:textSize="14dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>